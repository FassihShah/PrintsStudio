@page "/about"
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hero-section {
            min-height: 75vh;
            display: flex;
            align-items: center;
        background-color: #ceedec;
            position: relative;
        }

        .hero-image {
            width: 100%;
            object-fit: cover;
        }

        .highlight-circle {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(128, 128, 255, 0.7);
            position: absolute;
            bottom: 50px;
            right: 80px;
        }

        .circle-outline {
            width: 120px;
            height: 120px;
            border: 3px solid #9ce1ff;
            border-radius: 50%;
            position: absolute;
            top: 30px;
            right: 30px;
        }
        h1
        {
          font-family: 'Merriweather', serif;
          color: #242f66;
        }

        p
        {
            font-family: 'Lato', sans-serif;
            color:black;
        }
        .link
        {
           text-decoration:none;
           color: #07a6a6;
        }
        .txt
        {
        color: #242f66;
        }
    </style>
  <div class="container-fluid hero-section px-5" style="background-color:#ceedec">
        <div class="row w-100 align-items-center">
            <div class="col-md-6">
                <img src="/images/colorp.png" alt="Printing Tools" class="hero-image">
            </div>
    
            <div class="col-md-6 px-4">
                <h1 class="fw-bold txt">Prints Studio</h1>
                <p class="text-muted mt-3">
                    Fast. Flawless. Affordable. – Bringing Your Ideas to Reality with Premium-Quality Printing, Quick Turnarounds, and Prices That Fit Your Budget.
                </p>
             <a href="/aboutus" class="link fw-bold ps-0">
                    Discover Now <span>&rarr;</span>
               </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


